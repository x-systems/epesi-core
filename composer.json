{
	"name" : "epesi/core",
	"description" : "Epesi CRM / ERP core functionality.",
	"keywords" : [
		"epesi",
		"laravel",
		"crm",
		"erp",
		"composer",
		"package"
	],
	"license" : "MIT",
	"authors" : [{
			"name" : "Georgi Hristov",
			"email" : "info@xsystems.io"
		}
	],
	"type" : "project",
	"require" : {
		"php" : ">=7.2",
		"atk4/ui": "^1.7",
		"laravel/framework": "5.8.*",
		"joedixon/laravel-translation": "^1.0",
		"spatie/laravel-permission" : "^3.2"
	},
	"require-dev" : {
		"orchestra/testbench": "^3.8",
		"phpunit/phpunit": "^8.0"
	},
	"autoload" : {
		"files" : [
			"src/helpers.php"
		],
		"psr-4" : {
			"Epesi\\Core\\" : "src/"
		}
	},
	"autoload-dev" : {
		"psr-4" : {
			"Epesi\\Core\\Tests\\" : "tests/"
		}
	},
	"extra" : {
		"laravel" : {
			"providers" : [
				"Epesi\\Core\\Providers\\EpesiServiceProvider"
			],
			"aliases" : {
				"Epesi" : "Epesi\\Core\\Facades\\Epesi"
			}
		},
		"epesi" : {
			"modules" : {
				"Epesi\\Core\\" : "src/"
			}
		}
	}
}
